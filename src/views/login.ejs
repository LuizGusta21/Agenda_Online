<%- include('includes/head') %>
  <%- include('includes/nav') %>
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-4">
        <h1 class="text-center">Criar conta ou entrar</h1>
        <p class="text-center lead">Faça login ou crie a sua conta</p>

        <%- include('includes/messages'); %>

          <div class="row">
            <div class="col-lg">
              <h4>Crie a sua conta</h4>
              <form action="/login/register" method="post">
                <input type="hidden" name="_csrf" value=<%=csrfToken%>>
                <div class="form-group my-2">
                  <label>Nome</label>
                  <input type="nome" class="form-control" name="nome">
                </div>
                <div class="form-group my-2">
                  <label>Email</label>
                  <input type="email" class="form-control" name="email">
                </div>     
                <div class="form-group my-2">
                  <label>Senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary my-2">Criar minha conta</button>
              </form>
            </div>
           
            <div class="col-lg">
              <h4>Faça login</h4>
              <form action="/login/login" method="post">
                <input type="hidden" name="_csrf" value=<%=csrfToken%>>
                <div class="form-group my-2">
                  <label>Email</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group my-2">
                  <label>Senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary my-2">Entrar</button>
              </form>
            </div>
          </div>

      </div>
      <div class="col-lg-2"></div>
    </div>
    <%- include('includes/footer') %>