<%- include('includes/head') %> 
<%- include('includes/nav') %> 
<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-8 my-4">
    <h1 class="text-center">Agenda</h1>
    <p class="text-center lead">
      <% if(user) {%>
        <i><span style="font-weight: 600;"><%- user.nome  %></span></i>,
      <% } %>Seus contatos est√£o abaixo</p>
    
    <%- include('includes/messages') %> 

    <div class="responsive-table">
      <table class="table my-2">
        <tr>
          <th>Nome</th>
          <th>Sobrenome</th>
          <th>E-mail</th>
          <th>Telefone</th>
          <th></th>
          <th></th>
        </tr>
        <% contatos.forEach(contato => { %>
        <tr>
          <td><%= contato.nome %> </td>
          <td><%= contato.sobrenome %> </td>
          <td><%= contato.email %> </td>
          <td><%= contato.telefone %> </td>
          <td><a href="/contato/index/<%= contato._id %>" class="text-secondary">Editar</a></td>
          <td><a href="/contato/delete/<%= contato._id %>" class="text-danger">Excluir</a></td>
        </tr>
        <% }); %>  
      </table>
    </div>

  </div>
  <div class="col-lg-2"></div>
</div>
<%- include('includes/footer') %> 

    